<view class="container">

<!-- 头部倒计时 -->
  <view class="main-view">
    <view class="time-view">
      <view class='progress_box'>
        <canvas class="progress_bg"   canvas-id="canvasProgressbg">  </canvas> 
        <canvas class="progress_canvas" canvas-id="secondCanvas"></canvas>
      </view>      
    </view>
  </view>

<!-- 中部视图 -->

  <view class="scroll_box">
     <block wx:for="{{answerList}}" wx:key="answerIndex" wx:for-item="" wx:for-index="answerIndex">
      <scroll-view scroll-x="true" scroll-into-view="pic_{{scrId}}" scroll-with-animation="true">
        <view id="pic_{{answerIndex}}" class="item_list" wx:if="{{answerIndex == selectedIndex}}">
          <view class="root">
            <view class='table'>
              <view class="section-top">
                <block wx:for="{{symbolArr}}" wx:key="index" wx:for-item="item" wx:for-index="index">
                   <view class="{{index == symbolArr.length-1 ? 'input-top end ' : 'input-top '}}">
                       <text>{{item}}</text>
                   </view>        
                </block>
              </view>

              <view class="section2">
                 <block wx:for="{{numberArr}}" wx:key="index" wx:for-item="item" wx:for-index="index">
                     <view class="{{index == symbolArr.length-1 ? 'input-top end ' : 'input-top '}}">
                        <input value="{{item}}" class="{{index == symbolArr.length-1 ? 'input2 end2 ' : 'input2 '}}" disabled />
                     </view>       
                 </block>
              </view>
            </view>
          </view>

          <view class='table2'>
            <view class="section-top">
              <block wx:for="{{symbolArr}}" wx:key="index" wx:for-item="item" wx:for-index="index">
                 <view class="{{index == symbolArr.length-1 ? 'input-top end ' : 'input-top '}}">
                     <text>{{item}}</text>
                 </view>
        
              </block>
            </view>

            <view class="section2">
              <block wx:for="{{numberArr}}" wx:key="index" wx:for-item="item" wx:for-index="index">
                <view class="{{index == symbolArr.length-1 ? 'input-top end ' : 'input-top '}}">
                   <input wx:if="{{index<=6}}" type="" value="{{item}}" class="{{index == symbolArr.length-1 ? 'input2 end2 ' : 'input2 '}}" disabled />

                  <input wx:else focus bindinput="input" type="number" value="{{}}" class="{{index == symbolArr.length-1 ? 'input2 end2 ' : 'input2 '}}" />
                </view>       
              </block>
            </view>
          </view>


        </view>    
      </scroll-view> 
    </block>  
  </view>

 

