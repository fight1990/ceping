/* pages/start/start.wxss */
.container {
  padding: 0rpx;
  margin: 0rpx;
  width: 100%;
  height: 100%;
}

.pic_background{
  height: 100%;
  width:100%;
  position:absolute;
}

.guide-view {
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  position:relative;
}

.head-view {
  margin-top: 2%;
  width:340rpx;
  height:70rpx;
  border:2px solid #fff;
  border-radius:36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.head-text {
  height:34rpx;
  font-size:34rpx;
  font-weight:bold;
  color:white;
  line-height:72rpx;
}

.explain-view {
  margin-top: 48rpx;
  width: 670rpx;
  font-size:32rpx;
  font-weight:bold;
  color:black;
  line-height:54rpx;
  margin-left: 30rpx;
}

.explain-text {
  font-size:32rpx;
  font-weight:bold;
  color:black;
  line-height:54rpx;
  letter-spacing:10rpx;
  text-align: center;
}

.tip-view {
  position: absolute;
  /* margin-top: 492rpx; */
  bottom: 180rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip-text {
  height:38rpx;
  font-size:36rpx;
  font-weight:bold;
  color:#fff;
  line-height:52rpx;
}

.start-view {
  position: absolute;
  bottom: 70rpx;
  /* margin-top: 24rpx; */
  width: 100%;
}

.start-button {
  width: 540rpx;
  height: 80rpx;
  margin-left: 105rpx;
  font-size: 40rpx;
  line-height: 80rpx;
  color: #00B461;
  background-color: #fff;
  padding: 0rpx;
  font-weight: bold;
  border-radius: 10rpx;  
}






button::after {
  border: none;
}