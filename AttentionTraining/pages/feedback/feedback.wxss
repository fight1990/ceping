/* pages/feedback/feedback.wxss */

.container {
  padding: 0rpx;
  margin: 0rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;                              
}

.input-view {
  width: 700rpx;
  margin-top: 30rpx;
  background-color: white;
  border-radius: 5rpx;
  border: 2rpx solid #C2C2C2;
}

.input-image {
  margin-top: 22rpx;
  margin-left: 22rpx;
  width: 32rpx;
  height: 32rpx;
}

.input-view textarea {
  margin-left: 56rpx;
  margin-right: 20rpx;
  margin-top: -44rpx;
  font-size: 32rpx;
}

.commit-view {
  margin-top: 87%;
  width: 100%;
}

.commit-button {
  width: 540rpx;
  height: 80rpx;
  margin-left: 105rpx;
  font-size: 40rpx;
  line-height: 80rpx;
  color: white;
  background-color: #923179;
  padding: 0rpx;
  font-weight: bold;
  border-radius: 10rpx;  
}

.reslut {
  margin-top: 100rpx;
  display: flex;
  flex-direction: row; 
  align-items: center;  
}

.reslut image {
  width: 100rpx;
  height: 100rpx;
}

.reslut .reslut-text {
  margin-left: 30rpx;
}

.reslut .reslut-text text {
  font-size:32rpx;
  font-weight:bold;
  color:#333333;
  line-height:72rpx;
}

button::after {
  border: none;
}